/** 
 * Multiplexor:
 * out = a if sel == 0
 *       b otherwise
 */

CHIP Mux {
    IN a, b, sel;
    OUT out;

    PARTS:
    Nand(a=sel, b=sel, out=w1);
    Not(in=w1, out=w2);
    And(a=a, b=w1, out=w3);
    And(a=w2, b=b, out=w4);
    Or(a=w3, b=w4, out=out);
}
